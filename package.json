{
  "name": "newsletter-cli",
  "version": "0.3.3",
  "description": "Easy CLI to send newsletters from your machine",
  "bin": {
    "newsletter": "dist/index.js"
  },
  "scripts": {
    "test": "jest",
    "prepublishOnly": "npm run lint && npm run depcheck && npm run compile",
    "compile": "npm run clean && tsc -p .",
    "watch": "tsc -w -p .",
    "clean": "rm -rf dist",
    "lint": "tslint --fix -c tslint.json 'src/**/*.ts'",
    "depcheck": "depcheck --ignores='ts-jest,@types/*,prettier,husky'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/orkon/newsletter-cli.git"
  },
  "keywords": [
    "newsletter",
    "ses",
    "email",
    "bulk"
  ],
  "author": "Oleksii Rudenko <alexei.rudenko@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/orkon/newsletter-cli/issues"
  },
  "homepage": "https://github.com/orkon/newsletter-cli#readme",
  "devDependencies": {
    "@types/figlet": "1.2.0",
    "@types/inquirer": "6.5.0",
    "@types/jest": "24.0.22",
    "@types/marked": "0.7.0",
    "@types/node": "12.12.7",
    "@types/remove-markdown": "0.1.1",
    "depcheck": "0.9.1",
    "husky": "3.0.9",
    "jest": "24.9.0",
    "open": "6.4.0",
    "prettier": "1.19.1",
    "ts-jest": "24.1.0",
    "tslint": "5.20.1",
    "typescript": "3.7.2"
  },
  "dependencies": {
    "aws-sdk": "2.569.0",
    "chalk": "2.4.2",
    "csv-parse": "4.6.5",
    "figlet": "1.2.4",
    "front-matter": "3.0.2",
    "github-markdown-css": "3.0.1",
    "handlebars": "4.5.1",
    "inquirer": "7.0.0",
    "isemail": "3.2.0",
    "juice": "5.2.0",
    "marked": "0.7.0",
    "ora": "4.0.2",
    "remove-markdown": "0.3.0"
  },
  "files": [
    "dist/index.js",
    "dist/lib"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint",
      "pre-push": "npm run lint"
    }
  },
  "engines": {
    "node": ">=8.0.0"
  }
}
