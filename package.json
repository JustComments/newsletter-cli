{
  "name": "newsletter-cli",
  "version": "0.0.5",
  "description": "Easy CLI to send newsletters from your machine",
  "bin": {
    "newsletter": "dist/index.js"
  },
  "scripts": {
    "test": "jest",
    "prepublishOnly": "npm run lint && npm run depcheck && npm run compile",
    "compile": "npm run clean && tsc -p .",
    "watch": "tsc -w -p .",
    "clean": "rm -rf dist",
    "lint": "tslint --fix -c tslint.json 'src/**/*.ts'",
    "depcheck": "depcheck --ignores='ts-jest,@types/*,prettier,husky'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/orkon/newsletter-cli.git"
  },
  "keywords": [
    "newsletter",
    "ses",
    "email",
    "bulk"
  ],
  "author": "Oleksii Rudenko <alexei.rudenko@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/orkon/newsletter-cli/issues"
  },
  "homepage": "https://github.com/orkon/newsletter-cli#readme",
  "devDependencies": {
    "@types/figlet": "1.2.0",
    "@types/handlebars": "4.0.39",
    "@types/inquirer": "0.0.43",
    "@types/jest": "23.3.10",
    "@types/marked": "0.4.2",
    "@types/node": "10.12.10",
    "@types/opn": "5.1.0",
    "@types/ora": "1.3.4",
    "@types/remove-markdown": "0.1.1",
    "depcheck": "0.6.11",
    "husky": "1.2.0",
    "jest": "23.6.0",
    "prettier": "1.15.3",
    "ts-jest": "23.10.5",
    "tslint": "5.11.0",
    "typescript": "3.2.1"
  },
  "dependencies": {
    "aws-sdk": "2.367.0",
    "chalk": "2.4.1",
    "csv-parse": "4.0.1",
    "figlet": "1.2.1",
    "front-matter": "3.0.1",
    "github-markdown-css": "2.10.0",
    "handlebars": "4.0.12",
    "inquirer": "6.2.0",
    "isemail": "3.2.0",
    "juice": "5.0.1",
    "marked": "0.5.2",
    "opn": "5.4.0",
    "ora": "3.0.0",
    "remove-markdown": "0.3.0"
  },
  "files": [
    "dist/index.js",
    "dist/lib"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint",
      "pre-push": "npm run lint"
    }
  },
  "engines": {
    "node": ">=8.0.0"
  }
}
